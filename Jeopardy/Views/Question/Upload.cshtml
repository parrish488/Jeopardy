
@{
    ViewBag.Title = "Upload";
}

<h2>Upload Question File</h2>

@using (Html.BeginForm("Upload", "Question", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="editor-field">
                    <input id="ImagePath" title="Upload a product image" type="file" name="file" class="form-control" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

